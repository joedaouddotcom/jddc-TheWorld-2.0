@model IEnumerable<jddc_TheWorld_2._0.Models.Trip>
@{ 
    ViewBag.Title = "Home Page";
    Layout = "_Layout";
}
@section Scripts{
    <script src="~/lib/angular/angular.min.js"></script>
}

<div class="row" ng-app>

    <div>{{ "Two plus two equals: " + (2 + 2) }}</div>

    <div class="col-md-6">
        <h1>jddc TheWorld 2.0</h1>
        <p>The future home of jddc TheWorld v2.0!</p>

        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control" />
            </div>
            <div><input type="submit" value="Add" class="btn btn-success" /></div>
        </form>
    </div>

    <div class="col-md-6">
        <h2>The Map</h2>
        <ul>
            @foreach (var item in Model)
            {
                <li>@item.Name : @item.DateCreated.ToString("d")</li>

            }

        </ul>
        


    </div>

</div>